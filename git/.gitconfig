# Local/private config goes in the include
[include]
        path = ~/.gitconfig.local
[user]
        name = vanduc2514
        email = vanduc2514@gmail.com
[hub]
        protocol = https
[alias]
        co = checkout
        count   = !git shortlog -sn
[color]
        status = auto
        branch = auto
        ui = true
[color "diff"]
        meta = blue
        old = red
        new = green
        context = yellow
[core]
        excludesfile = ~/.gitignore
        editor = vim
	filemode = false
[apply]
        whitespace = warn
[mergetool]
        keepBackup = false
[difftool]
        prompt = false
[help]
        autocorrect = 1
[push]
        # See `git help config` (search for push.default)
        # for more information on different options of the below setting.
        #
        # Setting to git 2.0 default to suppress warning message
        default = simple
[init]
	defaultBranch = main
